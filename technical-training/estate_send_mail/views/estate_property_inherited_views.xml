<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_estate_property_form_inherited" model="ir.ui.view">
        <field name="name">estate.property.form.inherited</field>
        <field name="model">estate.property</field>
        <field name="inherit_id" ref="estate.view_estate_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='buyer_id']"
                position="after">
                <field name="buyer_email" />
            </xpath>
        </field>
    </record>
</odoo>